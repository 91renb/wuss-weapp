/* dist/w-steps/index.wxss */
.wuss-steps {
  overflow: hidden;
  background-color: #fff;
}
.wuss-steps-horizontal {
  display: flex;
  overflow: hidden;
  position: relative;
  padding: 20rpx 20rpx 30rpx;
}
.wuss-steps-vertical {
  padding: 0 0 0 70rpx;
}
.wuss-step {
  flex: 1;
  font-size: 28rpx;
  position: relative;
  color: #666;
  white-space: nowrap;
  vertical-align: top;
  /* overflow: hidden; */
}
.wuss-step-finish {
  color: #06bf04;
}
.wuss-steps-item-tail.wuss-steps-item-tail-finish::after {
  background-color: #06bf04;
}

.wuss-step-error {
  color: #f4333c;
}
.wuss-steps-item-tail.wuss-steps-item-tail-error::after {
  background-color: #f4333c;
}
.wuss-step-error .steo-icon--default {
  border-color: #f4333c;
}
.wuss-step-process {
  color: #06bf04;
}

/* .wuss-step-finish */
/* 图标 */
.wuss-step--icon-container {
  /* display: inline-block; */
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 28rpx;
  /* margin-right: 16rpx; */
  margin-left: 78rpx;
  transition: background-color 0.3s, border-color 0.3s;
}
.steo-icon--default {
  width: 100%;
  height: 100%;
  border: 1rpx solid rgba(0, 0, 0, 0.25);
  border-radius: 50%;
}
/* 内容 */
.wuss-step-content {
  /* display: inline-block;
  vertical-align: top; */
  display: block;
  text-align: center;
  margin-top: 16rpx;
  width: 200rpx;
}
/* 线条 */
.wuss-steps-item-tail {
  position: absolute;
  left: 0;
  width: 100%;
  top: -4rpx;
  padding: 0 48rpx;
  margin-left: 96rpx;
  box-sizing: border-box;
}
.wuss-step:last-child .wuss-steps-item-tail {
  display: none;
}
.wuss-steps-item-tail::after {
  height: 1rpx;
  border-radius: 1rpx;
  width: 100%;
  left: 0;
  background-color: #ddd;
  content: '';
  display: inline-block;
  transition: background 0.3s;
  position: relative;
  left: -2rpx;
}
