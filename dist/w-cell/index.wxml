<view
 class="wuss-class wuss-cell {{ firstCell ? 'wuss-cell-first-cell' : '' }}"
 hover-class="{{ disabled ? '' : 'wuss-cell-hover' }}"
 hover-stop-propagation="false"
>
	<view class="wuss-cell-content" catchtap="linkTo">
		<view class="wuss-cell-hd {{ desc ? 'wuss-cell-hd-desc-padding' : '' }}">
			<view class="wuss-cell-left">
				<w-icon
				 wx:if="{{ icon }}"
				 type="{{ icon }}"
				 size="{{ iconSize }}"
				 color="{{ iconColor }}"
				/>
				<view class="wuss-cell-title {{ disabled ? 'wuss-cell-title-disabled' : '' }}">
					{{ title
					}}
					<slot wx:if="{{ !title }}" name="title" />
				</view>
			</view>
			<view class="wuss-cell-right" style="{{ !link ? 'padding-right: 0;' : ''}}">
				<slot/>
				<view class="wuss-cell-right-content {{ disabled ? 'wuss-cell-right-content-disabled' : '' }}">
					{{ content
					}}
					<slot wx:if="{{ !title }}" name="content" />
				</view>
			</view>
		</view>
		<view class="wuss-cell-ft" wx:if="{{ desc }}">
			<view class="wuss-cell-desc" >{{ desc }}</view>
		</view>
	</view>
	<view class="wuss-cell-link" wx:if="{{ link }}">
		<w-icon
		 type="arrow-right"
		 color="#c8c8cd"
		 size="18px"
		/>
	</view>
</view>

