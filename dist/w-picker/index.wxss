.wuss-picker {
  position: relative;
}

.wuss-picker-mask {
  display: none;
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  margin: 0 auto;
  width: 100%;
  transform: translateZ(0px);
  background-image: -webkit-linear-gradient(top, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.6)), -webkit-linear-gradient(bottom, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.6));
  background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.6)), linear-gradient(to top, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.6));
  background-position: top, bottom;
  background-size: 100% 102px;
  background-repeat: no-repeat;
}

.wuss-picker-current-highlight {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  height: 34px;
  z-index: 1000;
  background-image: -webkit-linear-gradient(top, #d0d0d0, #d0d0d0, transparent, transparent), -webkit-linear-gradient(bottom, #d0d0d0, #d0d0d0, transparent, transparent);
  background-image: linear-gradient(to bottom, #d0d0d0, #d0d0d0, transparent, transparent), linear-gradient(to top, #d0d0d0, #d0d0d0, transparent, transparent);
  background-position: top, bottom;
  background-size: 100% 1px;
  background-repeat: no-repeat;
}

.wuss-picker-content {
  height: 250px;
  overflow: hidden;
  background-color: #ffffff;
  padding-bottom: 45px;
}

.wuss-picker-scroll {
  display: flex;
  height: 9999999px;
  background: transparent;
  flex-direction: column;
  flex-wrap: wrap;
  flex: 1;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.wuss-picker-scroll-item {
  height: 34px;
  min-height: 34px;
  line-height: 34px;
  width: 100%;
  text-align: center;
  color: #333333;
}


.wuss-picker-header {
  display: flex;
  border-bottom: 1rpx solid #eeeeee;
  position: relative;
  height: 44px;
  line-height: 44px;
  min-height: 44px;
  background: #f8f8f8;
}

.wuss-picker-header-hd
,.wuss-picker-header-bd
,.wuss-picker-header-ft {
  font-size: 28rpx;
}

.wuss-picker-header-hd {
  color: #666666;
  padding-left: 15px;
}

.wuss-picker-header-bd {
  flex: 1;
  color: #333333;
  text-align: center;
  font-size: 30rpx;
}

.wuss-picker-header-ft {
  padding-right: 15px;
}