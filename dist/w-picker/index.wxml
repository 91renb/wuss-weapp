<view
 class="wuss-class wuss-picker"
 hover-class="none"
 hover-stop-propagation="false"
>
	<view class="wuss-picker-mask" />
	<view class="wuss-picker-current-highlight" />
	<movable-area
	 class="wuss-picker-content"
	 scale-area="false"
	 style="width: {{ systemInfo.windowWidth }}px;"
	>
		<movable-view
		 inertia
		 out-of-bounds
		 class="wuss-picker-scroll"
		 direction="vertical"
		 disabled="{{ disabled }}"
		 damping="50"
		 y="{{ scrollY }}"
		 style="width: {{ systemInfo.windowWidth }}px;height: {{ scroll_height }}px;"
		 bindchange="_handleChange"
		 bindtouchstart="_handleTouchStart"
		 bindtouchmove="_handleTouchMove"
		 bindtouchend="_handleTouchEnd"
		>
			<view
			 class="wuss-picker-scroll-item"
			 wx:for="{{ options }}"
			 wx:key="index"
			>
				{{
				item.key
				}}
			</view>
		</movable-view>
	</movable-area>
</view>

