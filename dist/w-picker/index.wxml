<view
 class="wuss-class wuss-picker"
 hover-class="none"
 hover-stop-propagation="false"
>
	<!-- <view class="wuss-picker-mask" /> -->
	<view style="width: {{ width ? width : systemInfo.windowWidth }}px;" class="wuss-picker-current-highlight" />
	<movable-area
	 class="wuss-picker-content wuss-class-picker"
	 scale-area="false"
	 style="width: {{ width ? width : systemInfo.windowWidth }}px;"
	>
		<movable-view
		 inertia
		 out-of-bounds
		 class="wuss-picker-scroll"
		 direction="vertical"
		 disabled="{{ disabled }}"
		 damping="50"
		 y="{{ scrollY }}"
		 style="width: {{ width ? width : systemInfo.windowWidth }}px;height: {{ scroll_height }}px;"
		 bindchange="_handleChange"
		 bindtouchstart="_handleTouchStart"
		 bindtouchmove="_handleTouchMove"
		 bindtouchend="_handleTouchEnd"
		>
			<view
			 class="wuss-picker-scroll-item"
       style="font-size: {{ item[keyName].length >=8 ? 22 : 32}}rpx;"
			 wx:for="{{ options }}"
			 wx:key="index"
			>
				{{
				item[keyName]
				}}
			</view>
		</movable-view>
	</movable-area>
</view>

