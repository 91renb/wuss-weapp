<block wx:for="{{ options }}" wx:key="index">
	<w-cell
	 label="{{ item.value }}"
	 disabled="{{ item.disabled }}"
	 bind:click="_handleChecked"
   data-index="{{ index }}"
   data-key="{{ item.key }}"
	>
		<view
		 slot="content"
		 class="wuss-class wuss-radio"
		 hover-class="none"
		 hover-stop-propagation="false"
		>
			<w-icon
			 wx:if="{{ item.checked }}"
			 wuss-class="{{ item.disabled ? 'wuss-radio-disabled' : '' }}"
			 wx:if="{{ item.checked }}"
			 type="checked"
			 color="{{ color }}"
			 size="34rpx"
			/>
		</view>
	</w-cell>
</block>

