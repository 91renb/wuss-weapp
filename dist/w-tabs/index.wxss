page {
  min-height: 100%;
}

.wuss-tabs {
}

.wuss-tabs-content {
  white-space: nowrap;
  display: block;
  height:70rpx;
  position: relative;
}
.tabs-item {
  height: 100%;
  
  display: inline-block;
  text-align: center;
}
.tabs-item-title {
  font-size: 15px;
}

.tabs-item-title.active {
  color: rgb(69, 143, 246);
}

.tab-line-bar {
  position: absolute;
  bottom: 0;
  z-index: 100;
  background-color: rgb(69, 143, 246);
  -webkit-transition: .3s, -webkit-transform .3s;
  transition: .3s, -webkit-transform .3s;
}
.wuss-tabs-item-disabled{
  color:#c9c9c9;
}
.wuss-tabs-border-none {
  border: none!important;
}

.wuss-tabs-fixed {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  width: 100%;
}