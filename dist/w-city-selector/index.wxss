.w-index,page{
  width:100%;
  height:100%;
}
.w-index-item{
  padding:10px;
  border-bottom:#ddd solid 1rpx;
  font-size:14px;
}


.search-city {
  background: #f7f7f7;
  padding: 15rpx;
  width: 100%;
}

.search-city-show {
  position: fixed;
  left: 0;
  z-index: 1000;
}

.search-content {
  position: relative;
  border-radius: 10rpx;
  display: flex;
  flex: 1;
}


.search-placeholder {
  color: #cccccc;
}

.search-input {
  padding: 15rpx;
  color: #333333;
  background: #ffffff;
  border-radius: 10rpx;
  font-size: 26rpx;
  text-align: left;
  display: flex;
  flex: 1;
}
.search-btn {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translate(0,-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  outline: none;
  border: none;
  flex-wrap: nowrap;
  font-weight: normal;
  font-size: 32rpx;
  color: #ffffff;
  background: #f78d4f;
  width: 120rpx;
  padding: 0;
  margin: 0;
  height: 70%;
  /*  background-image:  */
}



.search-result {
  position: fixed;
  left: 0;
  top: 54px;
  z-index: 1000;
  background: #ffffff;
  padding: 15rpx;
  visibility: hidden;
  opacity: 0;
}

.search-result-show {
  visibility: visible;
  opacity: 1;
}

.result-items {
  padding: 10rpx 15rpx;
  font-size: 28rpx;
  color: #333333;
  border-bottom: 1rpx solid #eeeeee;
}

.result-items:last-child {
  border-bottom: none;
}


.search-show {
}

.v-cell {
  padding: 20rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #eeeeee;
}

.v-cell:last-child {
  border-bottom: none;
}

.v-cell >view {
  display: flex;
  flex: 1;
  flex-direction: column;
  flex-wrap: wrap;
}

.v-cell >view .title {
  position: relative;
  display: flex;
  align-items: center;
}

.v-cell >view .title .block {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translate(0,-50%);
  width: 7rpx;
  height: 30rpx;
  background: #f98d45;
}

.v-cell >view .title text {
  color: #333333;
  margin-left: 25rpx;
  font-size: 30rpx;
  line-height: 1;
  text-align: left;
}

.city-items {
  padding: 20rpx 0;
  display: flex;
  flex: 1;
  align-items: center;
  flex-direction: row;
  flex-wrap: wrap;
}

.items {
  border: 1rpx solid #eeeeee;
  font-size: 28rpx;
  color: #333333;
  padding: 8rpx 0;
  width: 150rpx;
  text-align: center;
  border-radius: 10rpx;
  margin: 7rpx;
  max-height: 50rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.f-sm {
  font-size: 23rpx;
}

