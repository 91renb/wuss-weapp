<!-- dist/w-input/index.wxml -->
<w-cell icon="leftIcon" labelSpan="{{ labelSpan }}">
	<view class="wuss-input_label {{disabled ? 'input_label-disabled':''}}" slot="label">
		<slot/>
	</view>
	<view class="wuss-input_input-wrap" slot="content">
		<input
		 class="wuss-input_input"
		 type="{{ type === 'phone' ? 'number' : type }}"
		 style="text-align:{{ moneyKeyboardAlign }}"
		 disabled="{{ disabled	 }}"
		 value="{{ _value }}"
		 maxlength="{{ type === 'phone' ? 13 : maxlength }}"
		 focus="{{ focus }}"
		 confirm-type="{{ confirm-type }}"
		 confirm-hold="{{ confirm-hold }}"
		 cursor="{{ cursor }}"
		 cursor-spacing="{{ cursor-spacing }}"
		 placeholder="{{ placeholder }}"
		 placeholder-style="{{ placeholder-style }}"
		 placeholder-class="{{ placeholder-class}}"
		 selection-start="{{ selection-start }}"
		 selection-end="{{ selection-end }}"
		 adjust-position="{{ adjust-position }}"
		 bindinput="handlerChange"
		 bindfocus="handlerFocus"
		 bindconfirm="handlerConfirm"
		 bindblur="handlerBlur"
		/>
		<w-icon
		 wx:if="{{ clear }}"
		 class="wuss-clear {{ _value.length > 0 ? 'wuss-clear-show' : ''}}"
		 type="close"
		 bindtap="handerClearClick"
		 size="20"
		/>
		<view
		 wx:if="{{ extra }}"
		 class="wuss-extra"
		 catch:tap="handerExtraClick"
		>
			{{extra}}
		</view>
	</view>

</w-cell>
