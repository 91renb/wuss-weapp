.wuss-input {
  align-items: center;
}
.wuss-input_label {
  color: #000;
  font-size: 34rpx;
  margin-left: 0;
  margin-right: 10rpx;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  padding: 4rpx 0;
  display: none;
}
.wuss-cell-first-cell::before {
  display: none;
  /* background-color: red; */
}
.wuss-class-left-empty {
  display: none !important;
}
.input_input-disabled,
.input_label-disabled {
  color: #888;
}
.label--2 {
  width: 68rpx;
}
.label--3 {
  width: 102rpx;
}
.label--4 {
  width: 136rpx;
}
.label--5 {
  width: 168rpx;
}
.label--6 {
  width: 204rpx;
}
.label--7 {
  width: 238rpx;
}
.wuss-input_input-wrap {
  font-size: 34rpx;
  flex: 1;
  display: flex;
  align-items: center;
  position: relative;
}
.input-wrap--textarea {
  align-items: flex-start;
}
.wuss-input_input-wrap .wuss-input_input {
  color: #000;
  font-size: 34rpx;
  appearance: none;
  width: 100%;
  padding: 4rpx 0;
  border: 0;
  background-color: transparent;
  line-height: 1;
  box-sizing: border-box;
}
.wuss-extra {
  flex: initial;
  min-width: 0;
  max-height: 41rpx;
  overflow: hidden;
  padding-right: 0;
  line-height: 1;
  color: #888;
  font-size: 30rpx;
  margin-left: 10rpx;
}
.wuss-clear {
  display: none;
  border-radius: 50%;
  overflow: hidden;
  font-style: normal;
}

.wuss-clear-show {
  display: block;
}

.wuss-textarea-count {
  position: absolute;
  bottom: 12rpx;
  right: 10rpx;
  color: #bbb;
  font-size: 28rpx;
}
.wuss-textarea-count > text {
  color: #000;
}

.wuss-input_label {
  display: flex;
  height: 100%;
  align-items: flex-start;
}
view.wuss-class-hd {
  padding-top: 20rpx;
  align-items: flex-start;
}
