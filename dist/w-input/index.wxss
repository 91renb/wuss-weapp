.wuss-input {
  display: flex;
  align-self: stretch;
  padding-right: 30rpx;
  overflow: hidden;
}
.wuss-input_label {
  color: #000;
  font-size: 34rpx;
  margin-left: 0;
  margin-right: 10rpx;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  padding: 4rpx 0;
}
.label--2 {
  width: 68rpx;
}
.label--3 {
  width: 102rpx;
}
.label--4 {
  width: 136rpx;
}
.label--5 {
  width: 170rpx;
}
.label--6 {
  width: 204rpx;
}
.label--7 {
  width: 238rpx;
}
.wuss-input_input-wrap {
  font-size: 34rpx;
  flex: 1;
}
.wuss-input_input-wrap input {
  color: #000;
  font-size: 34rpx;
  appearance: none;
  width: 100%;
  padding: 4rpx 0;
  border: 0;
  background-color: transparent;
  line-height: 1;
  box-sizing: border-box;
}
