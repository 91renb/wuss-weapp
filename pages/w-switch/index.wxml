<w-pane label="Switch" desc="开关" />

<w-cell-group>
	<w-cell label="Default">
		<w-switch
		 slot="content"
		 open="{{ open }}"
		 bind:onChange="handleChange"
		/>
	</w-cell>

	<w-cell label="Size = small">
		<w-switch
		 slot="content"
		 open="{{ open }}"
		 size="small"
		 bind:onChange="handleChange"
		/>
	</w-cell>

	<w-cell label="Size = default">
		<w-switch
		 slot="content"
		 open="{{ open }}"
		 size="default"
		 bind:onChange="handleChange"
		/>
	</w-cell>

	<w-cell label="Size = larger">
		<w-switch
		 slot="content"
		 open="{{ open }}"
		 size="larger"
		 bind:onChange="handleChange"
		/>
	</w-cell>

	<w-cell label="Color = 1c75f3" labelSpan="5">
		<w-switch
		 slot="content"
		 open="{{ open }}"
		 color="#1c75f3"
		 bind:onChange="handleChange"
		/>
	</w-cell>

	<w-cell label="Color = 28a2f3" labelSpan="5">
		<w-switch
		 slot="content"
		 open="{{ open }}"
		 color="#28a2f3"
		 bind:onChange="handleChange"
		/>
	</w-cell>

	<w-cell label="Color = ff8800" labelSpan="5">
		<w-switch
		 slot="content"
		 open="{{ open }}"
		 color="#ff8800"
		 bind:onChange="handleChange"
		/>
	</w-cell>

	<w-cell label="Color = e42112" labelSpan="5">
		<w-switch
		 slot="content"
		 open="{{ open }}"
		 color="#e42112"
		 bind:onChange="handleChange"
		/>
	</w-cell>

	<w-cell label="Disabled">
		<w-switch
		 slot="content"
		 disabled
		 open
		 color="#1c75f3"
		/>
	</w-cell>

</w-cell-group>

