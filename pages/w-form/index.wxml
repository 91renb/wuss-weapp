<!--pages/w-form/index.wxml-->
<w-pane title="Form" desc="表单" />
<w-form bindsubmit="wussFormSubmit" bindreset="wussFormReset">
	<w-cell-group>
		<w-input
		 type="phone"
		 name="phone"
		 placeholder="请输入你的手机号"
		 label="手机号"
		/>
		<w-input
		 name="userName"
		 placeholder="请输入你的姓名"
		 label="密码"
		/>
		<w-cell label="开启VIP模式">
			<w-switch name="isVip" slot="content" />
		</w-cell>
		<w-cell>
			<w-button
			 inline
			 type="info"
			 formType="submit"
			>
				提交
			</w-button>
				<w-button
			 inline
			 type="warn"
			 formType="reset"
			>
				重置
			</w-button>
		</w-cell>
	</w-cell-group>
</w-form>

